<div class="container">
  <p style="color: green"><%= notice %></p>

  <h1>Users</h1>

  <div id="users">
    <% @users.each do |user| %>
      <%= render user %>
      <p>
        <%= link_to "Show this user", user %>
      </p>
    <% end %>
  </div>

  <%= button_to "New user", signup_path, class: "btn btn-success btn-block" %>

</div>