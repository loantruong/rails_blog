<div class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">Welcome to my Blog</h1>
    <p class="col-md-8 fs-4">bla bla, bla</p>
  </div>
</div>

<div class="album py-5 mb-5">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% @articles.each do |article| %>
        <% unless article.archived? %>
          <div class="col">
            <div class="card shadow-sm">
              <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="img" preserveAspectRatio="xMidYMid slice" focusable="false"><title><%= article.title %></title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em"><%= article.title %></text></svg>

              <div class="card-body">
                <%= link_to article.title, article %>
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to 'View', article %></button>
                  </div>
                </div>
              </div>
            </div>
          </div>

        <% end %>
      <% end %>

  </div>
</div>

